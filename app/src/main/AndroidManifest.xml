
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shaybrow.taskmaster1">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Taskmaster1">
        <activity android:name="com.amplifyframework.datastore.generated.model.LoginTaskUser"></activity>
        <activity android:name=".activities.SignupConfirmation" />
        <activity android:name=".activities.Signup" />
        <activity android:name=".TaskList" />
        <activity android:name=".activities.TaskDetails" >

        </activity>
        <activity android:name=".UserProfile" />
        <activity android:name=".activities.allTasks" />
        <activity android:name=".activities.addTask">
            <intent-filter android:label="add task">
                <action android:name="android.intent.action.SEND"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
                <data android:mimeType="image/*"></data>
                <data android:mimeType="text/plain"/>

            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".PushListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>


</manifest>